<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"> // Menambahkan MaterialCardView pada tampian(interface)

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"> // Mengatur orientasi aplikasi menjadi vertical

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="390dp"
            android:layout_height="200dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop" /> //Menatur dan menampikan gambar yang diambil dari file drawable

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAppearance="?attr/textAppearanceHeadline6" /> //Menampilkan Text dibawah gambar

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nilai Penyajian Berita" /> //Menampilkan text

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Sangat baik" /> //Menampilkan check box 1
        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Lumayan" /> //Menampilkan check box 2
        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Kurang baik" /> //Menampilkan check box 3

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="2dp"
            android:text="Submit" /> //Menampilkan button submit

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>